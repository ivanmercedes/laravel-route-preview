{
  "name": "laravel-route-preview",
  "displayName": "Laravel Route Preview",
  "description": "Preview Laravel routes in a table format from VSCode.",
  "version": "0.0.1",
  "publisher": "IvanMercedes",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ivanmercedes/laravel-route-preview"
  },
  "keywords": [
    "laravel",
    "php",
    "routes",
    "route list",
    "preview",
    "artisan",
    "framework",
    "web",
    "mvc",
    "developer tool"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "./assets/laravel-route-preview-icon.png",
  "contributes": {
    "commands": [
      {
        "command": "laravelRoutePreview.showRoutes",
        "title": "Laravel: Preview Routes"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
